@import "../client/style"
@import "./ui"

html
	--bg #660000
	--fg #f0f0f0
	--primary rgb(24, 192, 24)
	--link rgb(24, 192, 24)
	--linkTapHighlight #fb4e4eb3

body
	margin 0
	background-color: var(--bg)
	color var(--fg)
	word-break break-word

main
	margin 0 0 0 330px
	padding 64px
	width 850px
	max-width calc(100% - 330px)

	h1
		margin 0 0 24px 0
		padding 16px 0
		font-size 1.5em
		border-bottom solid 2px #fcc

	h2
		margin 1em 0 24px 0
		padding 0 0 16px 0
		font-size 1.4em
		border-bottom solid 1px #fcc

	h3
		margin 1em 0 0 0
		padding 0
		font-size 1.25em

	h4
		margin 1em 0 0 0

	p
		margin 1em 0
		line-height 1.6em

	hr
		border none
		border-bottom solid 2px #fcc

	> aside
		margin-top 32px
		padding-top 32px
		border-top solid 2px #fcc

	.copyright
		margin 32px 0 0 0
		border-top solid 2px #fcc
		display block
		margin 16px 0 0 0
		color #fcc

nav
	display block
	position fixed
	z-index 10000
	top 0
	left 0
	width 330px
	height 100%
	overflow auto
	padding 32px
	background var(--bg)
	border-right solid 2px #800

	ul
		padding 0
		margin 0

@media (max-width 1025px)
	main
		margin 0
		max-width 100%

	nav
		position relative
		width 100%
		max-height 128px
		background var(--bg)
		border-right none

@media (max-width 768px)
	main
		padding 32px

@media (max-width 512px)
	main
		padding 16px

table
	width 100%
	max-width 100%
	overflow auto
	border-spacing 0
	border-collapse collapse

	thead
		font-weight bold
		border-bottom solid 2px #fcc

		tr
			th
				text-align left

	tbody
		tr
			&:nth-child(odd)
				background var(--bg)

	th, td
		padding 8px 16px
		min-width 128px

code
	padding 4px 8px
	font-family Consolas, 'Courier New', Courier, Monaco, monospace
	//color #295c92
	background #23241f
	border-radius 4px

pre
	overflow auto

	> code
		display block
		padding 16px

kbd.group
	display inline-block
	padding 4px
	background var(--bg)
	border 1px solid #fcc
	border-radius 4px
	box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)

kbd.key
	display inline-block
	padding 6px 8px
	background var(--bg)
	border solid 1px #fcc
	border-radius 4px
	box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)

td
	> kbd.group,
	> kbd.key
		margin 4px
